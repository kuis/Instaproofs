- var app = require('app');
- var message = require('app').config.login_message;
.login-form
  //- .close
  .block.main
    h1= model.name
    if model.date
      .date= model.date.format("LL")
    //- .type= model.type
    .error!= loginErrorMessage
    
    if message
      p.message!= message
      
  //- .arrow
  .block.input.email
    input(type="email", name="email")&attributes(lzA('placeholder', 'Email Address'))
    .icon
  .block.input.password
    input(type="password", name="password")&attributes(lzA('placeholder', 'Password'))
    .icon
      
  if model.password_hint
    .block.password-hint
      != lz('Password hint') + ': '
      = model.password_hint
      
  .block.subscribe.checked
    != lz('Opt-in to event notices')
    
  .buttons
    .button.large.back!= lz('Back')
    .loader-container
    .button.large.highlighted.submit
      .text!= lz('View Event')
      .loader.small.white
    
  
