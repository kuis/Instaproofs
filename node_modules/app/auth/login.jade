- var message = require('app').config.login_message;
.login-form
  //- .close
  .block.main
    h1= model.name
    .date= model.date.format("MMMM Do, YYYY")
    //- .type= model.type
    .error!= loginErrorMessage
    
    if message
      p.message!= message
      
  //- .arrow
  .block.input.email
    input(type="text", name="email", placeholder="Email Address")
    .icon
  .block.input.password
    input(type="password", name="password", placeholder="Password")
    .icon
      
  - console.log(model.toJSON())
  if model.password_hint
    .block.password-hint
      != lz('Password hint: ')
      = model.password_hint
    
  .buttons
    .button.large.back!= lz('Back')
    .loader-container
    .button.large.highlighted.submit
      .text!= lz('View Event')
      .loader.small.white
    
  
