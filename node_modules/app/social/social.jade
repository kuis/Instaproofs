- var app = require('app');
- var config = app.config;

.sharing-overlay
  //- .social-button.instagram
  //- if true || config.social.sharing_delicious.enabled
    a.social-button.delicious

  //- if true || config.social.sharing_digg.enabled
    a.social-button.digg

  if config.social.sharing_facebook.enabled
    a.social-button.facebook(target='_blank', href= app.sharing.getUrl('facebook', model.id, model.eid))

  if config.social.sharing_googleplus.enabled
    a.social-button.googleplus(target='_blank', href= app.sharing.getUrl('googleplus', model.id, model.eid))

  //- if config.social.sharing_myspace.enabled
    a.social-button.myspace

  if config.social.sharing_pinterest.enabled
    a.social-button.pinterest(target='_blank', href= app.sharing.getUrl('pinterest', model.id, model.eid))

  //- if social.sharing_reddit.enabled
    a.social-button.reddit

  if config.social.sharing_stumbleupon.enabled
    a.social-button.stumbleupon(target='_blank', href= app.sharing.getUrl('stumbleupon', model.id, model.eid))

  if config.social.sharing_twitter.enabled
    a.social-button.twitter(target='_blank', href= app.sharing.getUrl('twitter', model.id, model.eid))