
if lightbox.event.favorites.photos.length
  a.fav-cat(href= lightbox.event.favorites.app_url +'/'+ lightbox.event.favorites.photos.at(0).id,
            class= active === lightbox.event.favorites ? 'active': '')
    != lightbox.lz('Favorites')
each cat in categories
  if !cat.locked
    a(href= cat.app_url +'/'+ cat.photos.at(0).id,
      class= cat === active ? 'active' : '')
      span= cat.name
  else
    a(href= cat.app_url, class= 'password-protected' + (cat === active ? ' active' : ''))
      span= cat.name
