#lightbox
  .slides
  .slideshow-controls
    .toggle-slideshow: .text!= lz('Slideshow')
    .controls-wrapper: .controls
      .slideshow-speed
        .slider: .fill
        .nob
        .text!= lz('%d sec.', 5)
      .toggle-music 
        .status: .loading
        span!= lz('Music')
        
    //- .right-edge
  .prev
  .next
  .top-right
    .categories
    .category
    .count
    a.cart.top-right-icon
      span.badge
      .popover.bottom-left!= lz('Go to Cart')
    .toggle-names.top-right-icon
      .popover.bottom-left
    .toggle-fullscreen.top-right-icon
      .popover.bottom-left
    .close.top-right-icon
      
  #lightbox-cover
