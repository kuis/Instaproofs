- var app = require('app');
- var size, addon;
- var photo = model.photo;
- var img = model.img;

.cart-product
  .head
    .td.name
      = model.option.name&&model.option.name!==model.product.name? model.product.name+': '+model.option.name : model.product.name
      span.discount
    .td.quantity
      .qty
        //- input(type="number", name="qty", value= model.qty)
        //- .minus
        //- .plus
        //- .hide-controls
      //- else
        .no-qty 1
    .td.price 
      span.original-price
      span.discounted-price
    .td.actions
      .action.remove
        .popover.left!= lz("Remove this product from cart")
    .removed-buttons
      .button.light.restore!= lz('Restore')
      .button.light.hide!= lz('Clear')
  
  .cart-product-columns
    .left-col
      if img
        .product-img(style='width:'+ img.width +'px; height:'+ img.height +'px;'+ 'background:url('+ img.url +');')
    .right-col
      if model.option.description || model.product.description
        .description= model.option.description || model.product.description
        
      .availability
      
      if model.option.allow_notes
        .notes
          //- p!= lz("Add notes or instructions (optional):")
          textarea(placeholder="Notes or instructions (optional)")
            = model.notes
  .sizes
  .removed-cover
  //- .drag-tip!= lz('Tip: you can drag photos to rearrange them.')
  //- each size in model.option.required_size_list.models
    .product-size
      .product-size-title= size.size.name
      .product-photos
    
