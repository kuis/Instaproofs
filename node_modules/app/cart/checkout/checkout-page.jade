- var app = require('app')
.page.checkout.inactive.empty: .page-scroller: .page-scroll   
  .page-content
    .content 
      .page-header
        h1!= lz('Checkout')
        .page-path 
          //- span.wide-only!= lz('You are here:')
          a(data-hook='event-name', href='#events/'+ model.event.id)= model.event.name
          span &gt;
          a(href='#events/'+ model.event.id +'/cart')!= lz('Cart')
          span &gt;
          span!= lz('Checkout')
        //- .sales-info   
      
      .cart-empty-message
        h2!= lz('Your cart for this event is empty.')
        a.button.large(href='#events/'+model.event.id)!= lz('Back to Event')
      
      .checkout-contents
        .left-column
          .left-col
            .heading.shipping-details
              .line
              .label.shipping-details-label!= lz('Shipping Details')
              .label.contact-details-label!= lz('Contact Details')
              .line
            .block.shipping-details
              form.form-bg.shipping-address
                .row
                  label!= lz('First Name:')
                  .input: input.autofocus(name='first_name')
                .row
                  label!= lz('Last Name:')
                  .input: input(name='last_name')
                .row
                  label!= lz('Email:')
                  .input: input(name='email', type='email')
                .row
                  label!= lz('Phone Number:')
                  .input: input(name='phone', type='tel')
                //- .right-col
                .row.shippping-address1
                  label!= lz('Address:')
                  .input: input(name='address1')
                .row.shippping-address2
                  label.empty
                  .input: input(name='address2')
                .row
                  label!= lz('City:')
                  .input: input.shipping.city(name='city')
                .row
                  label!= lz('Country:')
                  .input
                    .select
                      select.country.shipping(name="country_id")
                .row.state.shipping
                  label!= lz('State / Region:')
                  .input
                    .select.loading
                      select.state.shipping(name="state_id")
                      .loader.micro
                .row
                  label!= lz('Postal Code:')
                  .input: input.shipping.zip(name='zip')
            
            
          .right-col
            .heading.payment-details
              .line
              .label!= lz('Payment Details')
              .line

            .block.payment-details

              .payment-selection
                .payment-type.pay-with-card
                  .check
                  != lz("Pay with Credit Card")
                .payment-type.pay-with-paypal
                  .check
                  != lz("Pay with PayPal")
                
              //- .button.paypal
                img(src="https://www.paypalobjects.com/webstatic/en_US/i/buttons/checkout-logo-small.png")
                .loader.micro


              .payment-type.credit-card
                form.payment-form.form-bg
                  .row
                    label!= lz('Card Number:')
                    .input: input(name='card_num', pattern='[0-9\-]+',
                        placeholder='XXXX-XXXX-XXXX-XXXX', value="")
                  .row.security-code
                    label!= lz('Security Code:')
                    .input: input(name='card_code', maxlength='4',
                                  placeholder='XXX', pattern='[0-9]+', value="")
                    .code-help!= lz('Last 3 digits<br>on the back')
                  .row.card-expiration
                    label!= lz('Expires:')
                    .input.expires
                      .select: select(name="exp_m")
                        option(value="") MM
                        option(value="01") 01
                        option(value="02") 02
                        option(value="03") 03
                        option(value="04") 04
                        option(value="05") 05
                        option(value="06") 06
                        option(value="07") 07
                        option(value="08") 08
                        option(value="09") 09
                        option(value="10") 10
                        option(value="11") 11
                        option(value="12") 12
                      .slash /
                      .select: select(name="exp_y")
                        option(value="") YY
                        option(value="16") 16
                        option(value="17") 17
                        option(value="18") 18
                        option(value="19") 19
                        option(value="20") 20
                        option(value="21") 21
                        option(value="22") 22
                  .row.billing-as-shipping
                    .checkbox
                    != lz('Billing address is the same as shipping address')
          
              form.billing-address
                .h3!= lz('Billing Address')
                .form-bg
                  .row
                    label!= lz('First Name:')
                    .input: input(name='first_name')
                  .row
                    label!= lz('Last Name:')
                    .input: input(name='last_name')
                  .row
                    label!= lz('Address:')
                    .input: input(name='address1')
                  .row
                    label
                    .input: input(name='address2')
                  .row
                    label!= lz('City:')
                    .input: input(name='city')
                  .row
                    label!= lz('Country:')
                    .input
                      .select: select.country.billing(name="country_id")
                  .row.state.billing
                    label!= lz('State/Region:')
                    .input
                      .select
                        select.state.billing(name="state_id")
                        .loader.micro
                  .row
                    label!= lz('Postal Code:')
                    .input: input(name='zip')
            
            .heading.instructions
              .line
              .label!= lz('Instructions')
              .line
            .block.instructions-block
              p!= lz("If you'd like to provide special instructions for your order, write them into the box below:")
              textarea(name="order-notes", 
                  placeholder="Special instructions (optional)")

        .right-column
      .required-note!= lz('* - Required fields')  
  .page-footer  
  //- include ../footer.jade
