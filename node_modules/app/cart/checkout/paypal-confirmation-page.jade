- var app = require('app')
.page.confirmation.paypal-confirmation.inactive: .page-scroller: .page-scroll
  .page-content
    .content 
      .page-header
        h1!= lz('Paypal Confirmation')
        .page-path 
          //- span.wide-only!= lz('You are here:')
          a(data-hook='event-name', href='#events/'+ model.event.id)= model.event.name
          span &gt;
          span!= lz('Paypal Confirmation')
        //- .sales-info   
      
      .confirmation-contents
        .block
          .thanks
              if app.config.receipt_message
                = app.config.receipt_message
              else
                = 'Thank you for your purchase!'
          .input-row
            label!= lz('Order Note:')
            .input: input(name='order_note')
        .buttons
          a.button.large(href='#events/'+model.event.id)!= lz('Back to Event')
          .button.large.light.confirm
            != lz('Confirm')
            .loader.micro

      .paypal-invalid-message
        h2!= lz(errorMessage)
        a.button.large(href='#events/'+model.event.id+'/cart')!= lz('Back to Cart')

  .page-footer  
  //- include ../footer.jade
