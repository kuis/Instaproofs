- var app = require('app')
.page.confirmation.inactive: .page-scroller: .page-scroll   
  .page-content
    .content 
      .page-header
        h1!= lz('Order Confirmation')
        .page-path 
          //- span.wide-only!= lz('You are here:')
          a(data-hook='event-name', href='#events/'+ model.event.id)= model.event.name
          span &gt;
          span!= lz('Order Confirmation')
        //- .sales-info   
      
      .confirmation-contents
        .block
          .thanks
            if app.config.receipt_message
              = app.config.receipt_message
            else
              != lz('Thank you for your purchase!')
          .inner.columns
            //- .row
              label!= lz('Order ID:')
              .value= model.order_id
            if model.confirmation_num
              .row
                label!= lz('Confirmation #:')
                .value= model.confirmation_num
            //- if model.transaction_id
              .row
                label!= lz('Transaction ID:')
                .value= model.transaction_id
          .receipt-info
            != lz('A receipt will be emailed to you shortly. You can also view it by using the button below.')
        .buttons
          a.button.large.view-receipt(href= model.receipt_url, 
              target='_blank', bypass)
            != lz('View Receipt')
          a.button.large(href='#events/'+model.event.id)!= lz('Back to Event')
        
  .page-footer  
  //- include ../footer.jade
