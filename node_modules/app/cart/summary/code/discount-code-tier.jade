.discount-code-tier.tiers-tr
  case model.code.type
    when 'shipping'
      .td.shipping
        != lz('Free standard shipping')
        if model.min
          .shipping-min-total
            != lz('Min. order total: ')
            = model.formatMoney(model.min)
    when 'sDollar'
    when 'mDollar'
      if !model.min && model.code.tiers.length < 2
        .td!= lz('Code Discount:')
        .td!= model.formatMoney(model.remaining)
        //- != lz('%s discount', model.remaining)
      else
        .td= model.min ? model.formatMoney(model.min) : '-'
        .td= model.formatMoney(model.remaining)
        // != lz('%s off %s+ orders', model.remaining, model.min)
    when 'sPercent'
    when 'mPercent'
      if !model.min && model.code.tiers.length < 2
        .td!= lz('Code Discount:')
        .td!= (model.value / 100) + '%'
        //- != lz('%d%% discount', model.value / 100)
      else
        .td= model.min ? model.formatMoney(model.min) : '-'
        .td= (model.value / 100) + '%'
        // != lz('%d%% off %s+ orders', model.value / 100, model.min)
