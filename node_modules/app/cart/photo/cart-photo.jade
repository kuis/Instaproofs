- var app = require('app');
- var size, addon;
- var photo = model.photo;
.cart-photo
  .image
    .img(style="background-image:url("+photo.getThumbUrl(model.color_id) +")")
      .overlay
        a.view-large(
          href= model.photo.buy_url
          title= photo.name
        )
          span!= lz('Edit')
    .photo-actions
      a(href= model.photo.buy_url).button.edit-photo!= lz('Edit')
  .info
    .title
      | !{model.photo.name}
    .items
