- var app = require('app');
- var size, addon;
- var photo = model.photo;
.cart-photo
  .image
    .img(style="background-image:url("+photo.getThumbUrl(model.color_id) +")")
      .overlay
        a.view-large(
          href= model.photo.buy_url
          title= photo.name
        )
          span!= lz('Edit')
    .photo-actions
      a(href= model.photo.buy_url).button.edit-photo!= lz('Edit')
      //- .button.edit-photo
      //-   .popover.right!= lz("Edit items list for this photo")
      //- .button.remove-photo
      //-   .popover.right!= lz('Remove photo from cart')
  .items
    //- each option in model.options.models
      //- - console.log(id, app.sizes.models.length);
      - size = app.sizes.get(+option.size_id);
      //- - console.log(size);
      .cart-photo-item
        .left
          .td.name= size.display_name
          .td.extras 
            .crop-thumb
            if option.addons
              each addon_oid, aid in option.addons
                - addon = app.addons.get(aid);
                .extra= addon.getName(addon_oid)
                //- .extra Deep Matte Paper
        .right
          .td.quantity
            .qty
              input(type="number", name="qty", value= option.qty)
              .minus
              .plus
          .td.price $1.10
          .td.actions
            .action.remove
              .popover.left!= lz("Remove this item from cart")
    //- .cart-photo-item
