- var app = require('app');
.cart-photo-item(class= model.size.no_qty ? 'no-qty' : '')
  .left
    .td.name
      = model.size.display_name
      span.bulk-pricing
        .bulk-tip!= lz('Bulk pricing available')
      span.discount
      a.crop-container(href=cropUrl)
    .td.extras 
      .extras-list
      .no-extras!= lz('No options selected')
      //- .crop-thumb
      //- if model.addons
        each addon_oid, aid in model.addons
          - addon = app.addons.get(aid);
          .extra= addon.getName(addon_oid)
          //- .extra Deep Matte Paper
  .right
    .td.quantity
      if !model.size.no_qty
        .qty
          //- input(type="number", name="qty", value= model.qty)
          //- .minus
          //- .plus
          //- .hide-controls
      else
        .checkbox.checked
    .td.price
      .price-base
      .price-final
    .td.actions
      .action.remove
        .popover.left!= lz("Remove this item from cart")
    .removed-buttons
      .button.light.restore!= lz('Restore')
      .button.light.hide!= lz('Clear')
