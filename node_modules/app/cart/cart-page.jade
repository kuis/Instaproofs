- var app = require('app')
.page.cart.inactive.empty: .page-scroller: .page-scroll   
  .page-content
    .content 
      .page-header
        h1!= lz('Shopping Cart')
        .page-path 
          //- span.wide-only!= lz('You are here:')
          //- a(href="#events")!= lz('Events')
          //- span &gt;
          a(data-hook='event-name', href='#events/'+ model.event.id)= model.event.name
          span &gt;
          span!= lz('Cart')
        .sales-info
      
      .cart-empty-message
        h2!= lz('Your cart for this event is empty.')
        a.button.large(href='#events/'+model.event.id)!= lz('Back to Event')
      
      .cart-contents  
        .left-column
          .heading.photos
            .line
            .label!= lz('Photos')
            .line
          .block.photos
                
            .thead.photos
              .left
                .th.item!= lz('Item')
                .th.extras!= lz('Options')
              .right
                .th.quantity!= lz('Qty')
                .th.price!= lz('Cost')
            .cart-photos
          
          .heading.products
            .line
            .label!= lz('Products')
            .line
          .block.products
            //- .thead.products
              .left
                .th.item!= lz('Item')
                .th.extras!= lz('Options')
              .right
                .th.quantity!= lz('Qty')
                .th.price!= lz('Cost')
            .cart-products
              
        .right-column
  .page-footer  
