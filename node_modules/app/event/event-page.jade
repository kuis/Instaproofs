.page.event.inactive(
    class= pageType === 'event-category' ? 'category' : ''
    ): .page-scroller: .page-scroll   
  .page-content
    .content 
      if model
        .page-header
          h1(data-hook='event-name')= model.name
          .page-path 
            //- span.wide-only!= lz('You are here:')
            //- a(href="#")!= lz('Events')
            //- span &gt;
            if pageType === 'event'
              //- span(data-hook='event-name')= model.name
            else
              a(data-hook='event-name', href='#events/'+ model.id)= model.name
              span &gt;
              span(data-hook='category-name')
        .sales-info
        
        .event-empty-message
          h2!= lz('There are no images in the event yet. Please check back later.')
          a.button.large(href='events')!= lz('Back to Events List')
          
        .flexgrid
          //- if model.categories.length > 1 || true
          //- .heading.event-photos
            .line
            .label!= lz('Photos')
            .line
          //- a.event-slideshow!= lz('Slideshow')
            
          .categories.items
            
          .heading.products-heading
            .line
            .label!= lz('Products')
            .line
          .products.items
  .page-footer  
