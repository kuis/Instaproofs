- var config = require('app').config;
.page.events.complete.reloading.inactive: .page-scroller: .page-scroll
  .page-content
    .content 
      //- if config.logo_url
      if hasHeaderLogo
        a.header-logo-link(href=config.logo_link)
          img.header-logo(src=config.logo_url)
      .events-selector
        .loader.small
        .inner
          .events-filter 
            .selected-filter.all!= lz('All events')
            .selected-filter.showcased!= lz('Showcased events')
            .selected-filter.current!= lz('Current events')
            .selected-filter.upcoming!= lz('Upcoming events')
            .dropdown
              a.filter-option.all!= lz('All')
              a.filter-option.showcased!= lz('Showcased')
              a.filter-option.current!= lz('Current')
              a.filter-option.upcoming!= lz('Upcoming')
          != ' '+ lz('sorted by') + ' '
          .events-sorting
            .selected-sorting.date!= lz('date')
            .selected-sorting.name!= lz('name')
            .selected-sorting.type!= lz('type')
            .dropdown
              a.sort-option.date!= lz('date')
              a.sort-option.name!= lz('name')
              a.sort-option.type!= lz('type')
      .events-list-hr.global
        .td-title!= lz('Title')
        .td-date!= lz('Date')
        .td-location!= lz('Location')
        .td-expires!= lz('Expiration')
      .events-list
      .empty-message
      .load-more
        .label!= lz('Load More Events')
        .loader

  .page-footer
  
