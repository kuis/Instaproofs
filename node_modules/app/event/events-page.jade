- var config = require('app').config;
.page.events.complete.reloading.inactive: .page-scroller: .page-scroll
  .page-content
    .content 
      //- if config.logo_url
      if hasHeaderLogo
        a.header-logo-link(href=config.logo_link)
          img.header-logo(src=config.logo_url)
      .events-selector
        .loader.small
        .inner
          .events-filter 
            .selected-filter.all!= lz('All events')
            .selected-filter.showcased!= lz('Showcased events')
            .selected-filter.current!= lz('Current events')
            .selected-filter.upcoming!= lz('Upcoming events')
            .dropdown
              a.filter-option.all!= lz('All')
              a.filter-option.showcased!= lz('Showcased')
              a.filter-option.current!= lz('Current')
              a.filter-option.upcoming!= lz('Upcoming')
          |  sorted by 
          .events-sorting
            .selected-sorting.date!= lz('Date')
            .selected-sorting.name!= lz('Name')
            .selected-sorting.type!= lz('Type')
            .dropdown
              a.sort-option.date!= lz('Date')
              a.sort-option.name!= lz('Name')
              a.sort-option.type!= lz('Type')
      .header
        .filters: .inner
          a.showcased(href="#", data-filter="showcased") 
            span.full!= lz('Showcased Events')
            span.short!= lz('Showcased')
          a.current(href="#", data-filter="current")!= lz('Current')
          a.upcoming(href="#", data-filter="upcoming")!= lz('Upcoming')
          a.all.active(href="#", data-filter="all") 
            span.full!= lz('All Events')
            span.short!= lz('All')
        .sorting: .inner
          span!= lz('Sort events by:')
          a.name(href="#", data-sort="name") 
            span.full!= lz('Event Name')
            span.short!= lz('Name')
          a.date.active(href="#", data-sort="date") 
            span.full!= lz('Event Date')
            span.short!= lz('Date')
          a.type(href="#", data-sort="type") 
            span.full!= lz('Event Type')
            span.short!= lz('Type')
        .clear
        .label
          .icon
          .loader.grey-bg
      .events-list-hr.global
        .td-title!= lz('Title')
        .td-date!= lz('Date')
        .td-location!= lz('Location')
        .td-expires!= lz('Expiration')
      .events-list
      .empty-message
      .load-more
        .label!= lz('Load More Events')
        .loader
        
  .page-footer
