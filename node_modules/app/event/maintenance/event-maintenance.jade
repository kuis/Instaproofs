- var app = require('app');
.event-maintenance
  .event-meintenance-lowres-image
  .event-maintenance-highres-image
  .event-maintenance-content
    h1(data-hook='event-name')= model.name
    p!= lz('This event is currently under maintenance.')
    p!= lz("This page will unlock automatically as soon as it's ready.")
    if app.config.style !== 'login'
      p!= lz("Or you can try other events in our catalalog:")
    .buttons
      a.button.large(href='#events')
        if app.config.style !== 'login'
          != lz('Browse Events')
        else
          != lz('Back to Home')
