- var event = model && model.collection.parent;
- var prev = model && model.prev;
- var next = model && model.next;
.fixed-footer.event-category(class= next ? 'has-next': '')
  .content
    a.prev(data-hook='prev-category', class= !prev ? 'hidden' : null,
        href= prev ? '#events/'+ event.id +'/'+ prev.id : null
        )
      span.cat-name= model && model.prev && model.prev.name
      span.prev-cat!= lz('Previous Category')
    a.next(data-hook='next-category', class= !next ? 'hidden' : null,
        href= next ? '#events/'+ event.id +'/'+ next.id : null
        )
      span.cat-name= model && model.next && model.next.name
      span.next-cat!= lz('Next Category')
