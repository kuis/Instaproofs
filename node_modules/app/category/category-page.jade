- var className;
- if (pageType === 'event-category') className = 'category';
- if (pageType === 'event-favorites') className = 'category';
.page.event.inactive(class= className): .page-scroller: .page-scroll
  .page-content
    .content 
      if model
        if model.name && model.categories && model.categories.length < 2
          .full-download-link
            .buttons
              a.button.large.full-download(href='javascript:void 0;')
                != lz('Download All Images')
        
        .page-header
          h1(data-hook='event-name')= model.name
          .page-path 
            //- span.wide-only!= lz('You are here:')
            //- a(href="#")!= lz('Events')
            //- span &gt;
            if pageType === 'event'
              //- span(data-hook='event-name')= model.name
            else
              a(data-hook='event-name', href='#events/'+ model.id)= model.name
              span &gt;
              span(data-hook='category-name')
                if isFavPage
                  != lz('Favorites')
          .event-description
        .sales-info
        
          
        .events-group
          .categories.group-events
        
        if pageType === 'event-category' 
          .heading.category-products-heading.products-heading
            .line
            .label!= lz('Products')
            .line
          .flexgrid
            .products.items
  .page-footer  
