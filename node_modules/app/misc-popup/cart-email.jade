.misc-popup.contact
    .bg
    .box
        .scroller
            .misc-content
                form.contact-form
                    input.name(type="text", name="name")&attributes(lzA('placeholder', 'Your name...'))
                    input.email(type="email", name="email")&attributes(lzA('placeholder', 'Your email address...'))
                    textarea.message(name="message")&attributes(lzA('placeholder', 'Your message...'))
                    input.toEmail(type="toEmail", name="toEmail")&attributes(lzA('placeholder', 'To email address...'))
        .foot
            .button.cancel.large!= lz('Close')
            .button.save.large.highlighted.with-loader
                != lz('Send')
                .loader.small.white
            .success-message!= lz('Email Sent')
