- var photographer = require('app').config.photographer;
.misc-popup.contact
  .bg
  .box
    .scroller
      .misc-content
        h1!= lz('Email Photo')

        form.contact-form
          input.to-email(type='text', name='to_email')&attributes(lzA('placeholder', 'To email address...'))
          input.sender-name(type='text', name='sender_name')&attributes(lzA('placeholder', 'Your name...'))
          input.sender-email(type='email', name='sender_email')&attributes(lzA('placeholder', 'Your email address...'))
          textarea.message(name='message')&attributes(lzA('placeholder', 'Your message...'))
        
    .foot
      .button.cancel.large!= lz('Close')
      .button.save.large.highlighted.with-loader
        != lz('Send')
        .loader.small.white
      .success-message!= lz('Email Sent')
