- var photographer = require('app').config.photographer;
.misc-popup.order-status
  .bg
  .box
    .scroller
      .misc-content
        h1!= lz('Check Order Status')
        form.order-status-form
          input.name(type="text", name="name")&attributes(lzA('placeholder', "Billing last name..."))
          input.id(type="text", name="id")&attributes(lzA('placeholder', "Order ID or Confirmation #..."))
        .order-details
    .foot
      .button.cancel.large!= lz('Close')
      .button.save.large.highlighted.with-loader
        != lz('Check Status')
        .loader.small.white
