- var photographer = require('app').config.photographer;
.misc-popup.unsubscribe
  .bg
  .box
    .scroller
      .misc-content
        h1
          | Subscription Setting for
          span.event-name

        form.unsubscribe-form
          input(type="checkbox" name="bulk")
          | Bulk
          br
          input(type="checkbox" name="discount")
          | Discount
          br
          input(type="checkbox" name="event")
          | Event
          br
          input(type="checkbox" name="repeat")
          | Repeat
          br
          br
          input(type="checkbox" name="update_all")
          | Use these email settings for all of the events that I am subscribed to
        
    .foot
      .button.cancel.large!= lz('Close')
      .button.save.large.highlighted.with-loader
        != lz('Update preferences')
        .loader.small.white
      .success-message!= lz('Updated')
