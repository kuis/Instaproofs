- var photographer = require('app').config.photographer;
.misc-popup.unsubscribe
  .bg
  .box
    .scroller
      .misc-content
        h1!= lz('Subscription Settings for ')
          span.event-name(data-hook="unsubscribe-event-name")!= lz('N/A')
        br
        form.unsubscribe-form
          div(id="unsubscribe-form")
            div
              input(type="checkbox" name="discount" id="uDiscount")
              label(for="uDiscount")
                != lz("Send me a reminder email for upcoming & expiring sales")
            div
              input(type="checkbox" name="event" id="uEvent")
              label(for="uEvent")
                != lz("Send me a reminder email shortly before this event expires")
            div
              input(type="checkbox" name="repeat" id="uRepeat")
              label(for="uRepeat")
                !=  lz("Send me a reminder email to check back each month")
            div
              input(type="checkbox" name="bulk" id="uBulk")
              label(for="uBulk")
                != lz("Send me special promotional emails")
            br
            input(type="checkbox" name="update_all" id="uUpdatAll")
            label(for="uUpdateAll")
              != lz("Use these subscription settings for all of the events that I'm subscribed to.")
        
    .foot
      .button.cancel.large!= lz('Close')
      .button.save.large.highlighted.with-loader
        != lz('Update preferences')
        .loader.small.white
      .success-message!= lz('Updated')
