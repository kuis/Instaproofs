- var app = require('app');
- var config = app.config;
.grid-photo
  .image
  .hidden-label!= lz('Hidden')
  .fill.borders
  .overlay
    .bg
    a.view-large(
      href= model.app_url
      title= model.name
    )
      span!= lz('View Larger Image')
    .icons
      a.icon.cart(href= model.buy_url): .tip!= lz('To Cart')
      .icon.fav: .tip!= lz('To Favorites')
      if model.download_url && model.event.allowedDownload
        a.icon.download(href= model.download_url, bypass)
          .tip!= lz('Download')
      .icon.hide(class= model.event.allowedHide ? '' : 'noop'): .tip!= lz('Hide')
      if config.socialEnabled && model.event.social
        .icon.share
          .tip!= lz('Share')
          .share-menu
  .failed-overlay
    p!= lz('Image failed to load')
    .button.reload!= 'Reload'
