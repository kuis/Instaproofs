.grid-photo
  .image
    //- img(src= model.thumb_url)
  //- .image(style="background-image:url("+ model.thumb_url +")")
  .hidden-label!= lz('Hidden')
  .fill.borders
  .overlay
    .bg
    a.view-large(href= model.app_url)
      span!= lz('View Larger Image')
    .icons
      a.icon.cart(href= model.buy_url): .tip!= lz('Add To Cart')
      //- .icon.cart: .tip!= lz('Buy More')
      .icon.fav: .tip!= lz('To Favorites')
      //- .icon.fav: .tip!= lz('Unfavorite')
      if model.download_url && model.event.allowedDownload
        a.icon.download(href= model.download_url, bypass)
          .tip!= lz('Download')
      .icon.hide(class= model.event.allowedHide ? '' : 'noop'): .tip!= lz('Hide')
      //- http://demo.instaproofs.com/socialBookmark.php?sb=1&url=http%3A%2F%2Fdemo.instaproofs.com%2Fshare.php%3Fid%3D1050631%26v3%3D1%26pid%3D270323662&pid=270323662&title=Jhosmara+and+Chris+-+JoAndChris-0002
      //- http://demo.instaproofs.com/socialBookmark.php?sb=1&url=http%3A%2F%2Fdemo.instaproofs.com%2Fshare.php%3Fid%3D1050631%26v3%3D1%26pid%3D270323662&pid=270323662&title=Jhosmara+and+Chris+-+JoAndChris-0002
      if config.socialEnabled
        .icon.share
          .tip!= lz('Share')
          .sharing-overlay
            //- .social-button.instagram
            //- if true || config.social.sharing_delicious.enabled
              a.social-button.delicious
            //- if true || config.social.sharing_digg.enabled
              a.social-button.digg
            if true || config.social.sharing_facebook.enabled
              a.social-button.facebook(target='_blank', href= app.sharing.getUrl('facebook', model.id, model.eid))
            if true || config.social.sharing_googleplus.enabled
              a.social-button.googleplus(target='_blank', href= app.sharing.getUrl('googleplus', model.id, model.eid))
            //- if true || config.social.sharing_myspace.enabled
              a.social-button.myspace
            if true || config.social.sharing_pinterest.enabled
              a.social-button.pinterest(target='_blank', href= app.sharing.getUrl('pinterest', model.id, model.eid))
            //- if true || social.sharing_reddit.enabled
              a.social-button.reddit
            if true || config.social.sharing_stumbleupon.enabled
              a.social-button.stumbleupon(target='_blank', href= app.sharing.getUrl('stumbleupon', model.id, model.eid))
            if true || config.social.sharing_twitter.enabled
              a.social-button.twitter(target='_blank', href= app.sharing.getUrl('twitter', model.id, model.eid))
    
    
      
