- var app = require('app');
.buy-form: .buy-form-content
  .options-wrapper
    .scroller
      if model.pricing.colors_count > 1
        .variants
          .variant-button
            .variant-name.all-variants(data-color-id='0')!= lz('All')
          each color, id in model.pricing.colors
            .variant-button
              .variant-name(data-color-id=id, class=app.colors.get(id).prefix)
                .full-name= app.colors.get(id).name
                .short-name= app.colors.get(id).short_name
        
      .products-head 
        .button.light.add-product!= lz("Add album or product")
      .products-prints
      .options
  .summary
    .total
      .make-default 
        .checkbox 
        span.default-short!= lz('Save as default')
        span.default-long!= lz('Save this as my default selection')
        span.is-default
          != lz('This is your default selection')
          a.button!= lz('Clear')
        span.is-default-short
          != lz('This is default')
          a.button!= lz('Clear')
      div!= lz('Total:') +' '
      .total-price
    .buttons
      //- .left-buttons
      .button.cancel!= lz('Cancel')
      .right-buttons
        .button.remove!= lz('Remove From Cart')
        .button.add!= lz('Add To Cart')
        .button.save!= lz('Save')
