.purchase-addon-option(class= model.img_url ? 'has-image' : '')
  .text
    .title
      .checkbox
      //- - console.log('getPrice')
      = model.name
      != ' (+'+ this.formatPrice() +')'
    .description= model.description
  if model.img_url
    .image-container(style="background-image:url("+model.img_url+")")
  
