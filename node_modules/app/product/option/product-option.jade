- var app = require('app');
- var size;
- var img = model.getImgForWidth(150);
.product-option
  .head
    .head-right
      .price.single= model.display_price
      if !model.no_qty
        .qty
          //- input(type= ua.mobile ? "number" : "text", name="qty", value="0")
          //- input(type="number", name="qty", value="0")
          //- .minus
          //- .plus
          //- .hide-controls
      else
        .checkbox
      .price.final= model.formatMoney(0)
    
    .sold-out-label!= lz('Sold Out')
    .maxed-out-label!= lz('All Stock in Cart')
    
    .name
      span.short-name(title=model.name)= model.name
      span.discount
      //- if model.description
      //-   .tip
    
    //- .price.final
      span.original-price
      span.discounted-price
  .wrap
    //- if model.description
      .description= model.description
    .left-col
      if img
        .option-img(style='width:'+ img.width +'px; height:'+ img.height +'px;'+ 'background:url('+ img.url +');')
    .right-col
      .availability
          
      if model.description
        .option-description!= model.description
      if model.allow_notes
        .notes
          //- p!= lz("Add notes or instructions (optional):")
          textarea&attributes(lzA('placeholder', 'Add notes or instructions (optional)'))
      if model.required_size_list.length
        .sizes
          //- .info!= lz("After adding this product to your cart, the following items must be added to the product before you will be able to checkout:")
          .sizes-label
            != lz("Includes following items:")
            .tip
          table
            tr
              th!= lz('Qty')
              th!= lz('Item')
            each size in model.required_size_list.models
              - var realSize = app.sizes.get(size.id);
              tr(data-size-id=size.id)
                td.qty!= size.type === 'exactly' ? size.qty : lz('Up to %d', size.qty)
                td.name
                  if (realSize.width && realSize.height || realSize.additional_size_list.length || realSize.name)
                    = realSize.name
                  else
                    !=lz('Any size')
                  if realSize.description
                    .info
