.product-popup
  .bg
  .box
    //- .close
    .scroller
      .h1= model.name
      .columns(class= model.img_url ? '' : 'single-col')
        if model.img_url
          .left
            .image
              - var bg = "background-image:url("+model.img_url+");";
              - var pad = "padding-top:"+ (model.img_height / model.img_width * 100) +'%;';
              .img(style= bg + pad)
        .right
          if model.description
            .product-description= model.description
          .options
          
    .foot
      .button.cancel.large!= lz('Cancel')
      .button.save.large.highlighted!= lz('Add to Cart')
